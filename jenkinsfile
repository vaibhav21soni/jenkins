pipeline {
    agent { label 'jenkins_slave' }
    triggers {
        githubPush() // Triggered by GitHub push webhook
    }

    environment {
        DEPLOY_DIR = 'C:\\nginx\\html' // Adjust to your actual Nginx html folder on Windows
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/vaibhav21soni/jenkins.git'
            }
        }

        stage('Deploy to Nginx') {
            steps {
                // Create the deploy directory if it doesn't exist
                bat """
                if not exist "${env.DEPLOY_DIR}" (
                    mkdir "${env.DEPLOY_DIR}"
                )
                """

                // Copy index.html file
                bat "copy /Y index.html \"${env.DEPLOY_DIR}\\index.html\""

                // Restart Nginx service (replace 'nginx' with your service name if different)
                bat "nginx -s stop"
                bat "start nginx"

                // Confirmation message
                bat "echo Deployment completed successfully."
            }
        }
    }
}
