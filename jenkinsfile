pipeline {
    agent { label 'jenkins_slave' }
    triggers {
        githubPush() // Triggered by GitHub push webhook
    }

    environment {
        DEPLOY_DIR = 'C:\\nginx\\html' // Change this to your actual nginx html folder on Windows
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/vaibhav21soni/jenkins.git'
            }
        }

        stage('Deploy to Nginx') {
            steps {
                // Copy file using Windows command (copy or xcopy)
                bat "copy /Y index.html ${env.DEPLOY_DIR}\\index.html"

                // Reload or restart Nginx service on Windows (adjust if your service name is different)
                bat "net stop nginx"
                bat "net start nginx"

                // Simple echo
                bat "echo done task"
            }
        }
    }
}
