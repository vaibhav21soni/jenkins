pipeline {
    agent { label 'jenkins_slave' }
    triggers {
        githubPush() // Triggered by GitHub push webhook
    }

    environment {
        DEPLOY_DIR = 'C:\\nginx\\html'
        NGINX_DIR = 'C:\\Users\\USER\\Downloads\\nginx-1.28.0'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/vaibhav21soni/jenkins.git'
            }
        }

        stage('Deploy to Nginx') {
            steps {
                bat """
                if not exist "${DEPLOY_DIR}" (
                    mkdir "${DEPLOY_DIR}"
                )
                copy /Y index.html "${DEPLOY_DIR}\\index.html"

                cd "${NGINX_DIR}"
                echo Reloading nginx...
                start nginx

                echo Deployment completed successfully.
                """
            }
        }
    }
}
